{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",//未设置 "baseUrl" 时，paths不允许应用非相对路径。
    "paths": {
      "@/*":[
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "./.eslintrc.cjs",
    "./vite.config.ts",
    "src/types/auto-imports.d.ts",// 解决ts找不到变量的报错
    "src/types/element-plus.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
